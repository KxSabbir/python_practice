#  Code for creat a list from a string

name = "abu sabbir,kausar khan, hossain khan"
name_list = name.split(",")
name_listT = tuple(name_list)
name_listL = list(name_listT) 
print(name_list)
print(name_listT)
print(name_listL)

st1 = "kausar khan, "
st2 = "sabbir khan, "
st3 = "salman khan, "

sts = st1 +st2 + st3
stsF = sts.split(",")
print(stsF)
