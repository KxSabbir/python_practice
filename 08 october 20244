#Code for creat a list from a string which have multiple values
name = "abu sabbir" , "kausar ahmad", "khan younus", "amir khan"
name_output= ", ".join(name)
name_outputUpdate = name_output.split(", ")
print(name_output)
print(name_outputUpdate)
